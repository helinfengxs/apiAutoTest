{
  "$schema": "http://json-schema.org/draft-07/schema",
  "type": "object",
  "title": "The Root Schema",
  "description": "The root schema is the schema that comprises the entire JSON document.",
  "default": {},
  "required": [
    "success",
    "code",
    "message"
  ],
  "properties": {
    "success": {
      "type": "boolean",
      "enum": [false]
    },
    "code": {
      "type": "integer",
      "enum": [400,3,403,2]
    },
    "message": {
      "type": "string"
    }
  }
}